@model IEnumerable<Quizzes.Models.Quiz>

@{
    ViewData["Title"] = "Index";
}

<br />
<h3>Quizy</h3>
<hr />

<div class="container">
    <div class="row">
        <div class="col">
            <a asp-action="Create" class="btn btn-success">
                <i class="fa-sharp fa-regular fa-plus"></i> Utwórz nowy
            </a>
        </div>
        <div class="col-4">
            <form asp-action="Index">
                <div class="input-group">
                    <input type="text" class="form-control" name="searchPhrase" placeholder="Wpisz fragment nazwy lub opisu...">
                    <input type="submit" value="Szukaj" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@foreach (var item in Model)
{
    <div class="card my-3">
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
            <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
            <a asp-action="Solve" asp-route-id="@item.Id" class="btn btn-success">Rozwiąż</a>
            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Więcej</a>
        </div>
        <div class="card-footer">
            <p class="card-text"><small>Quiz utworzony @Html.DisplayFor(modelItem => item.CreatedAt)</small></p>
        </div>
    </div>
}
