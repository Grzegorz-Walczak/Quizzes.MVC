@model IEnumerable<Quizzes.Models.Quiz>

@{
    ViewData["Title"] = "Index";
}

<br />
<h3>Quizy</h3>
<hr />

<div>
    <a asp-action="Create" class="btn btn-success btn-big">
        <i class="fa-sharp fa-regular fa-plus"></i> Utwórz nowy
    </a>
</div>

@foreach (var item in Model)
{
    <div class="card my-3">
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
            <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
            <a asp-action="Solve" asp-route-id="@item.Id" class="btn btn-success">Rozwiąż</a>
            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Więcej</a>
        </div>
        <div class="card-footer">
            <p class="card-text"><small>Quiz utworzony @Html.DisplayFor(modelItem => item.CreatedAt)</small></p>
        </div>
    </div>
}
